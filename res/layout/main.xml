<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent" android:layout_width="fill_parent" android:alwaysDrawnWithCache="true">
    <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow1" android:layout_width="wrap_content">
        <TextView android:text="Servidor:" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:textColor="#FFFFFF" android:textSize="30sp"></TextView>
        <Spinner android:id="@+id/cmbHost" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" ></Spinner>
        <TextView android:text="Recurso:" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:textColor="#FFFFFF" android:textSize="30sp"></TextView>
        <Spinner android:id="@+id/cmbGraphs" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1"></Spinner>
    </TableRow>



<ImageView android:id="@+id/imageView1" android:src="@drawable/cacti" android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent"></ImageView>

</LinearLayout>
